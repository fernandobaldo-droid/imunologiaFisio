    {question:"Qual imunoglobulina é mais abundante na secreção mucosa?", options:["IgG","IgA","IgM","IgE"], answer:1, explanation:"IgA secretora é a principal imunoglobulina das mucosas, protegendo superfícies expostas a patógenos."}
];

let currentQuestion = 0;
let score = 0;
let timer;
let timeLeft = 20;

let questionEl = document.getElementById("question");
let optionsEl = document.querySelectorAll(".option");
let explanationEl = document.getElementById("explanation");
let scoreEl = document.getElementById("score");
let timeEl = document.getElementById("time");
let nextBtn = document.getElementById("nextBtn");
let prevBtn = document.getElementById("prevBtn");
let restartBtn = document.getElementById("restartBtn");
let quizContainer = document.getElementById("quizContainer");

function shuffle(array){
    for(let i = array.length - 1; i > 0; i--){
        const j = Math.floor(Math.random() * (i + 1));
        [array[i], array[j]] = [array[j], array[i]];
    }
}

function startTimer() {
    clearInterval(timer);
    timeLeft = 20;
    timeEl.textContent = timeLeft;
    timer = setInterval(() => {
        timeLeft--;
        timeEl.textContent = timeLeft;
        if(timeLeft <= 0) {
            clearInterval(timer);
            explanationEl.textContent = "Tempo esgotado! " + quizData[currentQuestion].explanation;
        }
    }, 1000);
}

function loadQuestion() {
    if(currentQuestion >= quizData.length){
        showResult();
        return;
    }
    const q = quizData[currentQuestion];
    questionEl.textContent = `${currentQuestion + 1}. ${q.question}`;
    optionsEl.forEach((optionEl, index) => {
        optionEl.textContent = q.options[index];
        optionEl.className = "option";
    });
    explanationEl.textContent = "";
    startTimer();
}

function showResult(){
    quizContainer.innerHTML = `
        <div class="result-page">
            <h2>Quiz Finalizado!</h2>
            <p>Sua pontuação final é <strong>${score}</strong> pontos.</p>
            <button id="restartFinalBtn">Reiniciar Quiz</button>
        </div>
    `;
    document.getElementById("restartFinalBtn").addEventListener("click", restartQuiz);
}

function restartQuiz(){
    currentQuestion = 0;
    score = 0;
    scoreEl.textContent = `Pontuação: ${score}`;
    shuffle(quizData);
    quizContainer.innerHTML = `
    <div id="quizContent">
        <h2 id="question"></h2>
        <div class="options">
            <div class="option" data-index="0"></div>
            <div class="option" data-index="1"></div>
            <div class="option" data-index="2"></div>
            <div class="option" data-index="3"></div>
        </div>
        <div class="timer">Tempo restante: <span id="time">20</span>s</div>
        <div class="explanation" id="explanation"></div>
        <div class="buttons">
            <button id="prevBtn">Anterior</button>
            <button id="nextBtn">Próxima</button>
            <button id="restartBtn">Reiniciar</button>
        </div>
        <div class="score" id="score">Pontuação: 0</div>
    </div>
    `;

    // Reatribuir elementos e eventos
    questionEl = document.getElementById("question");
    optionsEl = document.querySelectorAll(".option");
    explanationEl = document.getElementById("explanation");
    scoreEl = document.getElementById("score");
    timeEl = document.getElementById("time");
    nextBtn = document.getElementById("nextBtn");
    prevBtn = document.getElementById("prevBtn");
    restartBtn = document.getElementById("restartBtn");

    optionsEl.forEach(optionEl => {
        optionEl.addEventListener("click", () => {
            clearInterval(timer);
            const selected = parseInt(optionEl.dataset.index);
            const correct = quizData[currentQuestion].answer;
            if(selected === correct) {
                optionEl.classList.add("correct");
                score += 10;
                explanationEl.textContent = "Correto! " + quizData[currentQuestion].explanation;
            } else {
                optionEl.classList.add("wrong");
                score -= 5;
                explanationEl.textContent = "Errado! " + quizData[currentQuestion].explanation;
            }
            scoreEl.textContent = `Pontuação: ${score}`;
        });
    });

    nextBtn.addEventListener("click", () => { currentQuestion++; loadQuestion(); });
    prevBtn.addEventListener("click", () => { if(currentQuestion > 0){ currentQuestion--; loadQuestion(); } });
    restartBtn.addEventListener("click", restartQuiz);

    loadQuestion();
}

optionsEl.forEach(optionEl => {
    optionEl.addEventListener("click", () => {
        clearInterval(timer);
        const selected = parseInt(optionEl.dataset.index);
        const correct = quizData[currentQuestion].answer;
        if(selected === correct) {
            optionEl.classList.add("correct");
            score += 10;
            explanationEl.textContent = "Correto! " + quizData[currentQuestion].explanation;
        } else {
            optionEl.classList.add("wrong");
            score -= 5;
            explanationEl.textContent = "Errado! " + quizData[currentQuestion].explanation;
        }
        scoreEl.textContent = `Pontuação: ${score}`;
    });
});

nextBtn.addEventListener("click", () => { currentQuestion++; loadQuestion(); });
prevBtn.addEventListener("click", () => { if(currentQuestion > 0){ currentQuestion--; loadQuestion(); } });
restartBtn.addEventListener("click", restartQuiz);

// Embaralhar antes de iniciar
shuffle(quizData);
loadQuestion();
</script>
</body>
</html>
